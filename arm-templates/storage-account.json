{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccount": {
            "type": "string",
            "metadata": {
                "description": "Enter the name for Storage Account to be deployed."
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Enter the location where storage account should be deployed."
            }
        },
        "sku": {
            "type": "string",
            "metadata": {
                "description": "Enter the storage account sku"
            }
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[parameters('storageAccount')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2023-04-01",
            "tags": {
                "displayName": "[parameters('storageAccount')]"
            },
            "location": "[parameters('location')]",
            "kind": "StorageV2",
            "sku": {
                "name": "[parameters('sku')]",
                "tier": "Premium"
            }
        }
    ],
    // value we need to send out is the blobUri. how do we send that?
    // reference() fn takes a resourceId as param and we get to reference properties of the resource. 
    // now the property we need is: primaryEndpoints.blobâ€¦
    // but how do we get the resourceId of storage account?
    // resourceId () fn takes two parameters (resource type, resource name) and then 
    // we feed its return value as parameter to the reference() fn
    "outputs": {
        "blobUri": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccount'))).primaryEndpoints.blob]"
        }
    }
}